{
  "sourceMap": true,
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es6",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true
  },
  "include": [
    "*",
    "plugins/**/*",
    "src/**/*",
    "utilities/*",
    "graphql-types.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
